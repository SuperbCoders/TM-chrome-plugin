{
    "name": "TimeMatters",
    "description" : "Counting time on sites",
    "version": "1.0",
    "manifest_version": 2,
    "permissions": ["contextMenus", "activeTab", "tabs", "declarativeContent", "storage", "unlimitedStorage", "http://*/*", "https://*/*"],
    "background": {
        "scripts": ["/js/background.js"],
        "persistent": false
    },
    "browser_action": {
      "default_icon": "16.png"
    },
    "icons": {
      "16": "16.png",
      "48": "48.png",
     "128": "128.png" }
  }